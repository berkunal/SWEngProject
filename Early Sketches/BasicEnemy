package com.tutorial.main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.awt.image.BufferedImage;
import java.io.IOException;


public class BasicEnemy extends GameObject {
	
	int time = 0;
	
	Handler handler;
	public BufferedImage benemy = null;
	

	public BasicEnemy(int x, int y, ID id, Handler handler) {
		super(x, y, id);
		
		init();
		
				
		this.handler = handler;
		
		velY = 1;
			
	}	
	

	@Override
	public void tick() {		
		
		x += velX;
		y += velY;
		
		if(y == 100){ velY = 0; }
		
		
		time++;
		
		
		
		
		
		
		if(time == 100){time = 0;}
		
		fire();		//if intersect must be added
			
		
	}

	@Override
	public void render(Graphics g) {
		
		
		g.drawImage(benemy, x, y,  null);
		
				
		//g.setColor(Color.red);
		//g.fillRect(x, y, 52, 16);
		
	}
	
	
	public Rectangle getBounds() {
		
		return new Rectangle(x, y, 32, 32);
	}
	
	
	
	private void fire(){
		
	
		for(int i=0; i< handler.object.size(); i++){
		
			GameObject tempObject = handler.object.get(i);  
		
				
		
			if(tempObject.getId() == ID.BasicEnemy){
								
				if(this.time == 80){					
					handler.addObject(new EnemyBullet(tempObject.x,tempObject.y, ID.EnemyBullet, handler));
				}													
			}						
			//collision code			
		}
	}
	
	public void init(){
		
		BufferedImageLoader loader = new BufferedImageLoader();
		
		try{			
			benemy = loader.loadImage("/benemy.png");			
			
		}catch(IOException e){
			e.printStackTrace();
		}	
		
		
		
		
	}
	
	
	

}
