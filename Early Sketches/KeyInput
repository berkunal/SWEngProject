package com.tutorial.main;

import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;

public class KeyInput extends KeyAdapter {
	
	private boolean[] keyDown = new boolean[4];
	
	private Handler handler;
	
		
	public KeyInput(Handler handler){
		
		this.handler = handler;
		
		keyDown[0] = false;
		keyDown[1] = false;
		keyDown[2] = false;
		keyDown[3] = false;
		
		
	}
	
	
	
	public void keyPressed(KeyEvent e){ // KeyAdapter method
		
		int key = e.getKeyCode();
		
		//System.out.println(key); // prints pressed button's ASC2 values('space' = 32 etc )
		
		for(int i=0; i< handler.object.size(); i++){
			
			GameObject tempObject = handler.object.get(i);
			
			/*if(tempObject.getId() == ID.Player2){
				//key events for player 2
				
				if(key == KeyEvent.VK_W){tempObject.setVelY(-7);}
				if(key == KeyEvent.VK_A){tempObject.setVelX(-7);}
				if(key == KeyEvent.VK_S){tempObject.setVelY(7);}
				if(key == KeyEvent.VK_D){tempObject.setVelX(7);}
											
			}*/
			
			
			if(tempObject.getId() == ID.Player){
				//key events for player 1
				
				if(key == KeyEvent.VK_UP){tempObject.setVelY(-7);  keyDown[0] = true;}
				if(key == KeyEvent.VK_LEFT){tempObject.setVelX(-7);  keyDown[1] = true;}
				if(key == KeyEvent.VK_DOWN){tempObject.setVelY(7);  keyDown[2] = true;}
				if(key == KeyEvent.VK_RIGHT){tempObject.setVelX(7);  keyDown[3] = true;}
				
				if(key == KeyEvent.VK_SPACE){
					
					handler.addObject(new Bullet(tempObject.x,tempObject.y, ID.Bullet, handler));
				}
				
			}
		}
		
		
		
		
		
		
	}

	
	public void keyReleased(KeyEvent e){ // KeyAdapter method
		
		
		int key = e.getKeyCode();
		
		
		for(int i=0; i< handler.object.size(); i++){
			
			GameObject tempObject = handler.object.get(i);
			
			/*if(tempObject.getId() == ID.Player2){
				//key events for player 1
				
				if(key == KeyEvent.VK_W){tempObject.setVelY(0);}
				if(key == KeyEvent.VK_A){tempObject.setVelX(0);}
				if(key == KeyEvent.VK_S){tempObject.setVelY(0);}
				if(key == KeyEvent.VK_D){tempObject.setVelX(0);}
											
			}*/
			
			
			if(tempObject.getId() == ID.Player){
				//key events for player 2
				
				if(key == KeyEvent.VK_UP){ keyDown[0] = false; }      //tempObject.setVelY(0);
				if(key == KeyEvent.VK_LEFT){ keyDown[1] = false; }  //tempObject.setVelY(0);
				if(key == KeyEvent.VK_DOWN){ keyDown[2] = false; }  //tempObject.setVelY(0);
				if(key == KeyEvent.VK_RIGHT){ keyDown[3] = false; }  //tempObject.setVelY(0);
				
				
				if( !keyDown[0] && !keyDown[2] ) { tempObject.setVelY(0); }  //vertical movement
				if( !keyDown[1] && !keyDown[3] ) { tempObject.setVelX(0); }  //horizontal movement
				
			}
		}
		
	}
	
	
}
