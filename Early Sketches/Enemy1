package com.tutorial.main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;
import java.awt.image.BufferedImage;
import java.io.IOException;
import java.util.Random;

public class Enemy1 extends GameObject{
	
	
	Handler handler;
	public BufferedImage enemy1 = null;
	
	Random r = new Random();
	

	public Enemy1(int x, int y, ID id, Handler handler) {
		super(x, y, id);
		
		init();
		this.handler = handler;	
		
		
		velX = 0;
		velY = r.nextInt(3) +1; // "3" is a speed limit, "+1" for speed != 0
	}

	@Override
	public void tick() {
		
		y += velY;
		x += velX;
		
	}

	@Override
	public void render(Graphics g) {
		
		g.drawImage(enemy1, x, y,  null);
		
		//g.setColor(Color.red);
		//g.fillRect(x, y, 32, 32); // enemy1 object
	}

	@Override
	public Rectangle getBounds() {
		
		return new Rectangle(x,y,32,32);
	}
	
	
	public void init(){
		
		BufferedImageLoader loader = new BufferedImageLoader();
		
		try{			
			enemy1 = loader.loadImage("/enemy1_32.png");			
			
		}catch(IOException e){
			e.printStackTrace();
		}	
		
		
		
		
	}
	
	
}
