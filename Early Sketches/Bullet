package com.tutorial.main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Rectangle;
import java.awt.image.BufferedImage;
import java.io.IOException;

public class Bullet extends GameObject{
	
	Handler handler;
	public BufferedImage bullet = null;
	
	
	public Bullet(int x, int y, ID id, Handler handler) {
		super(x, y, id);
		
		init();
		this.handler = handler;
		
		velX = 0;
		velY = -8;
				
	}	
	

	@Override
	public void tick() {
		
		x += velX;
		y += velY;
		
		collision();
		
		
	}
	
	private void collision(){
		
		for(int i=0; i<handler.object.size(); i++){
			
			GameObject tempObject = handler.object.get(i);
			
			if(tempObject.getId() == ID.BasicEnemy ){	//enemy destruction necessary			
				
				if(getBounds().intersects(tempObject.getBounds())){
					//collision code
					
					handler.removeObject(tempObject);
					
				}
			}
			if(tempObject.getId() == ID.Enemy ){	//enemy destruction necessary
				
				if(getBounds().intersects(tempObject.getBounds())){
					//collision code
					
					handler.removeObject(tempObject);
					
				}
			}
			
		}
		
	}

	@Override
	public void render(Graphics g) {
		
		if(id == ID.Bullet){
			
			g.drawImage(bullet, x, y,  null);
			
			//g.setColor(Color.white);
			//g.fillRect(x, y, 16, 26); // bullet object
						
		}
		
	}



	@Override
	public Rectangle getBounds() {
		
		return new Rectangle(x, y, 16, 26);
	}
	
	
	public void init(){
		
		BufferedImageLoader loader = new BufferedImageLoader();
		
		try{			
			bullet = loader.loadImage("/mybullet3.png");			
			
		}catch(IOException e){
			e.printStackTrace();
		}	
		
		
		
		
	}
	
	
	
	
	
	
	
}
